    <script>
      function login() {
        let self = this;
        let obj = {
          nombre: $('#nombre').val(),
          usuario: $('#usuario').val(),
          password: $('#password').val()
        };

        alert(obj.nombre);
        $.ajax({
          type: 'POST',
          data: obj,
          url: '/api/login/register',
          success(res) {
            alert("algo paso");
            window.location.href = '/';
          },
          error(res) {
            alert("error en ajax");
            self.fallaLogin = true;
          }
        });
      }
    </script>
